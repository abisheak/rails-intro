-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th 
        =link_to "Movie Title", :controller => "movies", :action => "sort", :id => "title_header" 
      %th 
        =link_to "Rating", :action => "sort", :controller => "movies"
      %th 
        =link_to "Release Date", :action => "sort", :controller => "movies", :id => "release_date_header" 
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
